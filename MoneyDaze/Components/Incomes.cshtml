@inject IBudgetService BudgetService

@page "/incomes"

<h1>Incomes</h1>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Income</th>
                            <th>Amount</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var income in BudgetService.Incomes)
                        {
                            <tr>
                                <td>@income.Description</td>
                                <td>£@income.Amount</td>
                                <td class="text-right"><button class="btn btn-default" onclick="@(() => DeleteItem(income.Id))">Delete</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (!ShowAddItem)
        {
        <div class="row">
            <div class="col-md-12">
                <button onclick="@ToggleShowAddItem" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add Item</button>
            </div>
        </div>
        }
        @if (ShowAddItem)
        {
            <AddIncomeItem OnIncomeAdded="@RefreshData" OnCancelAdd="@CancelAdd" />
        }
    </div>
</div>

@functions { 

    private bool ShowAddItem { get; set; }

    private void ToggleShowAddItem()
    {
        ShowAddItem = !ShowAddItem;
    }

    private void RefreshData()
    {
        ToggleShowAddItem();
        StateHasChanged();
    }

    private void CancelAdd()
    {
        ToggleShowAddItem();
        StateHasChanged();
    }

    private void DeleteItem(Guid id)
    {
        BudgetService.DeleteIncome(id);
        StateHasChanged();
    }
}