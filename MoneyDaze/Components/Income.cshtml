@inject IBudgetService BudgetService

@page "/income"

<h1>Income</h1>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Income</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var income in BudgetService.Incomes)
                        {
                            <tr>
                                <td>@income.Description</td>
                                <td>£@income.Amount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (!ShowAddItem)
        {
        <div class="row">
            <div class="col-md-12">
                <button @onclick(ToggleShowAddItem) class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add Item</button>
            </div>
        </div>
        }
        @if (ShowAddItem)
        {
            <AddIncomeItem OnIncomeAdded=RefreshData OnCancelAdd=CancelAdd />
        }
    </div>
</div>

@functions { 

    private bool ShowAddItem { get; set; }

    private void ToggleShowAddItem()
    {
        ShowAddItem = !ShowAddItem;
    }

    private void RefreshData()
    {
        StateHasChanged();
        ToggleShowAddItem();
    }

    private void CancelAdd()
    {
        StateHasChanged();
        ToggleShowAddItem();
    }
}